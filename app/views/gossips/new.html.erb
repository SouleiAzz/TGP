<h1 class="text-center">Create a Gossip</h1>
<div class="text-center mt-5">
  <%= form_tag(gossips_path, method: "post") do %>
    <div class="form-group row">
      <%= label_tag :title, "Title ", class: "col-form-label" %>
      <%= text_field_tag :title, "", class: "form-control", required: true %>
    </div>
    <div class="form-group row">
      <%= label_tag :content, "Content", class: "col-form-label" %>
      <%= text_field_tag :content, "", class: "form-control", required: true %>
    </div>
    <div class="form-group row">
      <%= label_tag :tags, "Tags", class: "col-form-label" %>
      <select id="tags" name="tags" class= "form-control">
        <option value="none"></option>
        <% @tags.each do |t| %>
          <option value=<%= t.id %>><%= t.title %></option>
        <% end %>
      </select>
    </div>
    <div class="form-group row">
      <%= submit_tag "Create Gossip", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
