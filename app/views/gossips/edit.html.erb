<h1 class="text-center">Update Gossip</h1>
<div class="text-center mt-5">
  <%= form_tag(gossip_path(@id = @gossip.id), method: "patch") do %>
    <div class="form-group row">
      <%= label_tag :title, "Title ", class: "col-form-label" %>
      <%= text_field_tag :title, @gossip.title, class: "form-control", required: true %>
    </div>
    <div class="form-group row">
      <%= label_tag :content, "Content", class: "col-form-label" %>
      <%= text_field_tag :content, @gossip.content, class: "form-control", required: true %>
    </div>
    <div class="form-group row">
      <%= label_tag :tags, "Add tag", class: "col-form-label" %>
      <select id="tags" name="tags" class= "form-control">
        <option value="none"></option>
        <% @tags.each do |t| %>
          <% unless @gossip.tags.include?(t) %>
            <option value=<%= t.id %>><%= t.title %></option>
          <% end %>
        <% end %>
      </select>
    </div>
    <div class="form-group row">
      <%= label_tag :delete_tags, "Remove tag", class: "col-form-label" %>
      <select id="delete_tags" name="delete_tags" class= "form-control">
        <option value="none"></option>
        <% @tags.each do |t| %>
          <% if @gossip.tags.include?(t) %>
            <option value=<%= t.id %>><%= t.title %></option>
          <% end %>
        <% end %>
      </select>
    </div>
    <div class="form-group row">
      <%= submit_tag "Update Gossip", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
